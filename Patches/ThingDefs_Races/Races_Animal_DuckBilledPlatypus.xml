			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>AnimalCollabProj</modName>
			</li>
	
			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName="ACPDuckBilledPlatypus"]</xpath>
