<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.FindFile">
				<modName>AnimalCollabProj</modName>
				<file>Races_Animal_Lizard.xml</file>
			</li>
			<li Class="ModCheck.IsModLoaded">
				<modName>Combat Extended</modName>
				<yourMod>AnimalCollab CE Patch</yourMod>
			</li>
	
			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName="ACPXenguana"]</xpath>
				<value>
				<li Class="CombatExtended.RacePropertiesExtensionCE">
					<bodyShape>QuadrupedLow</bodyShape>
				</li>
				</value>
			</li>
						
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="ACPXenguana"]/statBases</xpath>
				<value>
				<MeleeDodgeChance>0.05</MeleeDodgeChance>
				<MeleeCritChance>0.2</MeleeCritChance>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName="ACPXenguana"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>left claw</label>
							<capacities><li>Scratch</li></capacities>
							<power>8</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
							<armorPenetration>0.12</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>right claw</label>
							<capacities><li>Scratch</li></capacities>
							<power>8</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
							<armorPenetration>0.12</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<capacities><li>Bite</li></capacities>
							<power>10</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
							<armorPenetration>0.28</armorPenetration>
						</li>
					</tools>
				</value>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName="ACPXGecko"]</xpath>
				<value>
				<li Class="CombatExtended.RacePropertiesExtensionCE">
					<bodyShape>QuadrupedLow</bodyShape>
				</li>
				</value>
			</li>
						
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="ACPXGecko"]/statBases</xpath>
				<value>
				<MeleeDodgeChance>0.12</MeleeDodgeChance>
				<MeleeCritChance>0.2</MeleeCritChance>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName="ACPXGecko"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>left claw</label>
							<capacities><li>Scratch</li></capacities>
							<power>3</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
							<armorPenetration>0.12</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>right claw</label>
							<capacities><li>Scratch</li></capacities>
							<power>3</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
							<armorPenetration>0.12</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<capacities><li>Bite</li></capacities>
							<power>4</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
							<armorPenetration>0.28</armorPenetration>
						</li>
					</tools>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>













